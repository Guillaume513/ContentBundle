{% extends '@App/layout.html.twig' %}

{% block title %}Contact du site{% endblock title %}

{% block body %}

    <div class="page-header-area" id="head-confirm">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="header-page">
                        <h1>Contact du site</h1>
                        <ul>
                            <li> <a href="{{ path('home') }}">Accueil</a> </li>
                            <li>Contact du site</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="home-page-about-area">
        <div class="container">
            {% for flashMessage in app.session.flashbag.get('success_contact') %}
                <div class="alert alert-success">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('error_contact') %}
                <div class="alert alert-danger">
                    {{ flashMessage }}
                </div>
            {% endfor %}

            {{ form_start(form) }}
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
                    <h2 class="form-title">Général</h2>
                    <div class="row form-group">
                        <div class="col-xs-4 col-sm-4 col-md-2 col-lg-2">
                            <label form="{{ form.title.vars.id }}">Titre du site</label>
                        </div>
                        <div class="col-xs-8 col-sm-8 col-md-10 col-lg-4">
                            <div class="input-inline input-xlarge">
                                <div class="input-group">
                                    {{ form_errors(form.title) }}
                                    {{ form_widget(form.title) }}
                                    <span class="input-group-addon input-circle-right">
                                        <i class="fa fa-file-text-o"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-xs-4 col-sm-4 col-md-2 col-lg-2">
                            <label form="{{ form.descriptif.vars.id }}">Descriptif du site</label>
                        </div>
                        <div class="col-xs-8 col-sm-8 col-md-10 col-lg-4">
                            {{ form_errors(form.descriptif) }}
                            {{ form_widget(form.descriptif) }}
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-xs-4 col-sm-4 col-md-2 col-lg-2">
                            <label form="{{ form.emailsDestinataire.vars.id }}">Email destinataire</label>
                        </div>
                        <div class="col-xs-8 col-sm-8 col-md-10 col-lg-4">
                            <div class="input-inline input-xlarge">
                                <div class="input-group">
                                    {{ form_errors(form.emailsDestinataire) }}
                                    {{ form_widget(form.emailsDestinataire) }}
                                    <span class="input-group-addon input-circle-right">
                                    <i class="fa fa-file-text-o"></i>
                                </span>
                                </div>
                                <span class="info-form">Indiquez la liste des adresses e-mails, séparées par des virgules, auxquelles seront envoyées les demandes d'informations.</span>
                            </div>
                        </div>
                    </div><div class="row form-group">
                        <div class="col-xs-4 col-sm-4 col-md-2 col-lg-2">
                            <label form="{{ form.facebook.vars.id }}">Facebook</label>
                        </div>
                        <div class="col-xs-8 col-sm-8 col-md-10 col-lg-4">
                            <div class="input-inline input-xlarge">
                                <div class="input-group">
                                    {{ form_errors(form.facebook) }}
                                    {{ form_widget(form.facebook) }}
                                    <span class="input-group-addon input-circle-right">
                                        <i class="fa fa-file-text-o"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-xs-4 col-sm-4 col-md-2 col-lg-2">
                            <label form="{{ form.twitter.vars.id }}">Twitter</label>
                        </div>
                        <div class="col-xs-8 col-sm-8 col-md-10 col-lg-4">
                            <div class="input-inline input-xlarge">
                                <div class="input-group">
                                    {{ form_errors(form.twitter) }}
                                    {{ form_widget(form.twitter) }}
                                    <span class="input-group-addon input-circle-right">
                                        <i class="fa fa-file-text-o"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-xs-4 col-sm-4 col-md-2 col-lg-2">
                            <label form="{{ form.linkedin.vars.id }}">Linkedin</label>
                        </div>
                        <div class="col-xs-8 col-sm-8 col-md-10 col-lg-4">
                            <div class="input-inline input-xlarge">
                                <div class="input-group">
                                    {{ form_errors(form.linkedin) }}
                                    {{ form_widget(form.linkedin) }}
                                    <span class="input-group-addon input-circle-right">
                                        <i class="fa fa-file-text-o"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-xs-4 col-sm-4 col-md-2 col-lg-2">
                            <label form="{{ form.googlePlus.vars.id }}">Google +</label>
                        </div>
                        <div class="col-xs-8 col-sm-8 col-md-10 col-lg-4">
                            <div class="input-inline input-xlarge">
                                <div class="input-group">
                                    {{ form_errors(form.googlePlus) }}
                                    {{ form_widget(form.googlePlus) }}
                                    <span class="input-group-addon input-circle-right">
                                    <i class="fa fa-file-text-o"></i>
                                </span>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
                    <h2 class="form-title">Adresse du site</h2>
                    <div class="row form-group">
                        <div class="col-xs-4 col-sm-4 col-md-2 col-lg-2">
                            <label form="{{ form.adresse.vars.id }}">Adresse</label>
                        </div>
                        <div class="col-xs-8 col-sm-8 col-md-10 col-lg-4">
                            <div class="input-inline input-xlarge">
                                <div class="input-group">
                                    {{ form_errors(form.adresse) }}
                                    {{ form_widget(form.adresse) }}
                                    <span class="input-group-addon input-circle-right">
                                    <i class="fa fa-file-text-o"></i>
                                </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-xs-4 col-sm-4 col-md-2 col-lg-2">
                            <label form="{{ form.cp.vars.id }}">Code Postal</label>
                        </div>
                        <div class="col-xs-8 col-sm-8 col-md-10 col-lg-10">
                            <div class="input-inline input-xlarge">
                                <div class="input-group">
                                    {{ form_errors(form.cp) }}
                                    {{ form_widget(form.cp) }}
                                    <span class="input-group-addon input-circle-right">
                                        <i class="fa fa-file-text-o"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-xs-4 col-sm-4 col-md-2 col-lg-2">
                            <label form="{{ form.city.vars.id }}">Ville</label>
                        </div>
                        <div class="col-xs-8 col-sm-8 col-md-10 col-lg-10">
                            <div class="input-inline input-xlarge">
                                <div class="input-group">
                                    {{ form_errors(form.city) }}
                                    {{ form_widget(form.city) }}
                                    <span class="input-group-addon input-circle-right">
                                        <i class="fa fa-file-text-o"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-xs-4 col-sm-4 col-md-2 col-lg-2">
                            <label form="{{ form.country.vars.id }}">Pays</label>
                        </div>
                        <div class="col-xs-8 col-sm-8 col-md-10 col-lg-10">
                            <div class="input-inline input-xlarge">
                                <div class="input-group">
                                    {{ form_errors(form.country) }}
                                    {{ form_widget(form.country) }}
                                    <span class="input-group-addon input-circle-right">
                                        <i class="fa fa-file-text-o"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-xs-4 col-sm-4 col-md-2 col-lg-2">
                            <label form="{{ form.phone.vars.id }}">Téléphone</label>
                        </div>
                        <div class="col-xs-8 col-sm-8 col-md-10 col-lg-4">
                            <div class="input-inline input-xlarge">
                                <div class="input-group">
                                    {{ form_errors(form.phone) }}
                                    {{ form_widget(form.phone) }}
                                    <span class="input-group-addon input-circle-right">
                                        <i class="fa fa-file-text-o"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-xs-4 col-sm-4 col-md-2 col-lg-2">
                            <label form="{{ form.fax.vars.id }}">Fax</label>
                        </div>
                        <div class="col-xs-8 col-sm-8 col-md-10 col-lg-4">
                            <div class="input-inline input-xlarge">
                                <div class="input-group">
                                    {{ form_errors(form.fax) }}
                                    {{ form_widget(form.fax) }}
                                    <span class="input-group-addon input-circle-right">
                                        <i class="fa fa-file-text-o"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-xs-4 col-sm-4 col-md-2 col-lg-2">
                            <label form="{{ form.email.vars.id }}">Email du site</label>
                        </div>
                        <div class="col-xs-8 col-sm-8 col-md-10 col-lg-4">
                            <div class="input-inline input-xlarge">
                                <div class="input-group">
                                    {{ form_errors(form.email) }}
                                    {{ form_widget(form.email) }}
                                    <span class="input-group-addon input-circle-right">
                                    <i class="fa fa-file-text-o"></i>
                                </span>
                                </div>
                                <span class="info-form">Il s'agit de l'adresse de contact du site</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                {{ form_widget(form.Valider) }}
            </div>
            {{ form_rest(form) }}
        </div>
    </div>
{% endblock %}